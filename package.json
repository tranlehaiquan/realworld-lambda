{
   "name": "realworld-lambda",
   "description": "This template demonstrates how to make a simple HTTP API with Node.js and Typescript running on AWS Lambda and API Gateway using the Serverless Framework v3",
   "version": "1.0.0",
   "scripts": {
      "deploy": "sls deploy",
      "dev": "sls offline",
      "package": "sls package",
      "start": "ts-node src/index.ts",
      "typeorm": "typeorm-ts-node-commonjs",
      "test": "vitest",
      "coverage": "vitest run --coverage",
      "format": "prettier --write \"src/**/*.ts\""
   },
   "dependencies": {
      "@middy/core": "^4.4.0",
      "@middy/http-error-handler": "^4.4.0",
      "@middy/http-header-normalizer": "^4.4.0",
      "@middy/http-json-body-parser": "^4.4.0",
      "@swc/core": "^1.3.57",
      "date-fns": "^2.29.3",
      "http-errors": "^2.0.0",
      "jsonwebtoken": "^9.0.0",
      "lodash": "^4.17.21",
      "pg": "^8.10.0",
      "reflect-metadata": "^0.1.13",
      "typeorm": "0.3.15",
      "unplugin-swc": "^1.3.2",
      "yup": "^1.1.1"
   },
   "devDependencies": {
      "@types/http-errors": "^2.0.1",
      "prettier": "^2.8.8",
      "@types/aws-lambda": "^8.10.101",
      "@types/node": "^16.11.10",
      "@vitest/coverage-c8": "^0.31.0",
      "serverless": "^3.21.0",
      "serverless-offline": "^12.0.4",
      "serverless-plugin-typescript": "^2.1.2",
      "ts-node": "^10.9.1",
      "typescript": "4.5.2",
      "vitest": "^0.31.0"
   }
}
